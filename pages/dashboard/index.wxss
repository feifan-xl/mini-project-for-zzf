  margin-top: 20rpx;
}

.add-minus {
  position: absolute;
  right: 20rpx;
  top: 230rpx;
  width:200rpx;
  height:60rpx;
  border:1px solid #ccc;
  border-radius:10rpx;
}
.add-minus text{
  width:65rpx;
  line-height: 60rpx;
  text-align: center;
  float: left;
}
.add-minus input{
  width:68rpx;
  height:60rpx;
  text-align:center;
  float:left;
  border-left:1px solid #ccc;
  border-right:1px solid #ccc;
}
.add-minus .disabled{
  color:#ccc;
}
.add-miuns .normal{
  color:black;
}

.joinBuy {
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.joinBuy view {
  float: left;
  width: 50%;
  text-align: center;
  line-height: 80rpx;
  color: white;
}

.join-cart {
  background: #000;
  opacity: 0.8;
}

